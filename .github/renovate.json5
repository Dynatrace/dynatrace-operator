{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies"],
  "digest": { "enabled": false },
  "baseBranches": ["$default", "release-0.11", "release-0.12", "release-0.13"],
  "enabledManagers": [ "regex", "dockerfile", "gomod", "github-actions" ],
  "regexManagers": [
    {
      "fileMatch": [ "(^|/|\\.)prerequisites.mk$", "(^|/|\\.)third-party-licenses.sh$" ],
      "matchStrings": [
        "depName=(?<depName>.*?)\\s.*?_version=(?<currentValue>.*)\\s"
      ],
      "datasourceTemplate": "go"
    },
    {
      "fileMatch": [ "(^|/|\\.)ci.yaml$"],
      "matchStrings": [
        "depName=(?<depName>.*?)\\s.*?version\\:\\s(?<currentValue>.*)\\s",
      ],
      "datasourceTemplate": "go"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "commitMessagePrefix": "Docker:",
      "enabled": true,
      "allowedVersions": "/^v?[0-9]+\\.[0-9]+(\\.[0-9]+)*$/"
    },
    {
      "matchManagers": ["gomod"],
      "commitMessagePrefix": "Go:",
      "enabled": true,
      "allowedVersions": "/^v[0-9]+\\.[0-9]+\\.[0-9]+(\\.[0-9]+)?$/",
      "postUpdateOptions": [ "gomodTidy" ]
    },

    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["indirect"],
      "enabled": false
    },
    {
      "matchManagers": ["github-actions"],
      "commitMessagePrefix": "Actions:",
      "enabled": true,
      "allowedVersions": "/^v[0-9]+\\.[0-9]+\\.[0-9]+(\\.[0-9]+)?$/"
    },
    {
      "matchManagers": ["regex"],
      "commitMessagePrefix": "Dev:",
      "enabled": true
    },
    {
      "matchUpdateTypes": ["patch"],
      "baseBranchList": [ "release-0.11", "release-0.12", "release-0.13" ],
      "enabled": true
    },
    {
      "matchPackageNames": ["k8s.io/client-go"],
      "allowedVersions": "< 1.0"
    }
  ],
}
